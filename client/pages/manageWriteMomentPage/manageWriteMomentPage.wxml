<view class="weui-cells__title">动态分类</view>
<view class="weui-cells weui-cells_after-title">
    <view class="weui-cell weui-cell_select">
        <view class="weui-cell__hd weui-cell__hd_in-select-after">
            <view class="weui-label">分类</view>
        </view>
        <view class="weui-cell__bd">
            <picker bindchange="bindCategoryChange" value="{{categoryIndex}}" range="{{categories}}">
                <view class="weui-select weui-select_in-select-after">{{categories[categoryIndex]}}</view>
            </picker>
        </view>
        <view class="weui-cell__ft weui-cell__ft_in-access"></view>
    </view>
</view>


<view class="weui-cells__title" style="margin-top: 60rpx">动态内容</view>
<view class="weui-cells weui-cells_after-title">
    <view class="weui-cell">
        <view class="weui-cell__bd">
            <textarea value="{{content}}" bindblur="content" class="weui-textarea" placeholder="请输入动态内容" style="height: 11.3em" maxlength="100"/>
            <view class="weui-textarea-counter">限100字</view>
        </view>
    </view>
</view>


<view class="weui-cells__title" style="margin-top: 60rpx">配图</view>
<wux-upload count="3" sizeType="{{['compressed']}}" list-type="picture-card" file-list="{{ fileList }}" url="{{ uploadUrl }}" bind:change="onChange" bind:success="onSuccess" bind:fail="onFail" bind:complete="onComplete" bind:preview="onPreview">
    <image src="../../icon/addImage.svg" style="vertical-align: middle;width:40px; height: 40px;"></image>
</wux-upload>


<view class="weui-btn-area" style="margin-top: 60rpx">
    <button class="weui-btn" type="primary" bindtap="submit">提交</button>
</view>
