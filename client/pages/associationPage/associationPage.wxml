<view class="page-tab-container">
    <view class="page-tab">
        <view class="tab-cell-left">
            <text bindtap="clickLeftTab" style="color: {{leftTabColor}}">动态</text>
        </view>
        <view class="tab-cell-right">
            <text bindtap="clickRightTab" style="color: {{rightTabColor}}">寻觅</text>
        </view>
    </view>

    <view class="page-tab-line">
        <view class="tab-line-left">
            <text bindtap="clickLeftTab" style="color: {{leftTabLineColor}}">——</text>
        </view>
        <view class="tab-line-right">
            <text bindtap="clickRightTab" style="color: {{rightTabLineColor}}">——</text>
        </view>
    </view>
</view>




<swiper current="{{currentTab}}" duration="300" bindchange="switchPage" style="height: {{clientHeight?clientHeight + 'px':'auto'}}">


    <swiper-item>
        <scroll-view scroll-y="true" class="scoll-y">

            <view class="moment__container" style="margin-top: 95rpx">
                <view class="moment__cell fly_from_bottom" wx:for="{{momentList}}" wx:for-item="moment" wx:for-index="momentIndex" wx:key="{{moment.moment_id}}" style="margin-top: 0;">
                    <view class="weui-cell">

                        <view class="weui-cell__bd" style="width: 80%">
                            <view class="moment__from">
                                <text bindtap="toAssociationDetailPage" data-id="{{moment.association_id}}">{{moment.association_name}}</text>
                            </view>

                            <view class="moment__content">
                                <text>{{moment.content}}</text>
                            </view>

                            <view class="weui-uploader">
                                <view class="weui-uploader__bd">
                                    <view class="weui-uploader__files">
                                        <block wx:for="{{moment.image_list}}" wx:key="*this">
                                            <view class="weui-uploader__file" bindtap="previewImage" id="{{item}}" data-index="{{momentIndex}}">
                                                <image class="weui-uploader__img" src="{{item}}" mode="aspectFill" />
                                            </view>
                                        </block>
                                    </view>
                                </view>
                            </view>

                            <view class="moment__sub">
                                <text>{{moment.date}}</text>
                                <image bindtap="like" data-id="{{momentIndex}}" hidden="{{moment.like}}" src="../../icon/like-before.svg" style="width: 30rpx; height: 30rpx; margin-left: 460rpx;"/>
                                <image src="../../icon/like-after.svg" hidden="{{!moment.like}}" style="width: 30rpx; height: 30rpx; margin-left: 460rpx;"/>
                            </view>

                        </view>
                    </view>
                </view>
            </view>

        </scroll-view>
    </swiper-item>


    <swiper-item>
        <scroll-view scroll-y="true" class="scoll-y">

            <view class="weui-search-bar" style="margin-top: 80rpx">
                <view class="weui-search-bar__form">
                    <view class="weui-search-bar__box">
                        <icon class="weui-icon-search_in-box" type="search" size="14"></icon>
                        <input type="text" class="weui-search-bar__input" placeholder="搜索" value="{{inputVal}}" focus="{{inputShowed}}" bindinput="inputTyping" />
                        <view class="weui-icon-clear" wx:if="{{inputVal.length > 0}}" bindtap="clearInput">
                            <icon type="clear" size="14"></icon>
                        </view>
                    </view>
                    <label class="weui-search-bar__label" hidden="{{inputShowed}}" bindtap="showInput">
                        <icon class="weui-icon-search" type="search" size="14"></icon>
                        <view class="weui-search-bar__text">搜索</view>
                    </label>
                </view>
                <view class="weui-search-bar__cancel-btn" hidden="{{!inputShowed}}" bindtap="hideInput">取消</view>
            </view>
            <view class="weui-cells searchbar-result" wx:if="{{inputVal.length > 0}}">
                <view bindtap="toAssociationDetailPage" data-id="{{item.id}}" class="weui-cell weui-cell_access" hover-class="weui-cell_active" wx:for="{{searchResult}}" wx:key="*this">
                    <view class="weui-cell__bd">
                        <view>{{item.name}}</view>
                    </view>
                    <view class="weui-cell__ft weui-cell__ft_in-access"></view>
                </view>
            </view>

            <view class="weui-cells__title">分类</view>
            <view class="weui-cells weui-cells_after-title">
                <view bindtap="toAssociationCategoryPage" data-id="公益" class="weui-cell weui-cell_access" hover-class="weui-cell_active">
                    <view class="weui-cell__hd">
                        <image src="icon/公益.svg" style="margin-right: 10px;vertical-align: middle;width:25px; height: 25px;"></image>
                    </view>
                    <view class="weui-cell__bd">公益</view>
                    <view class="weui-cell__ft weui-cell__ft_in-access">查看</view>
                </view>

                <view bindtap="toAssociationCategoryPage" data-id="体育" class="weui-cell weui-cell_access" hover-class="weui-cell_active">
                    <view class="weui-cell__hd">
                        <image src="icon/体育.svg" style="margin-right: 10px;vertical-align: middle;width:25px; height: 25px;"></image>
                    </view>
                    <view class="weui-cell__bd">体育</view>
                    <view class="weui-cell__ft weui-cell__ft_in-access">查看</view>
                </view>

                <view bindtap="toAssociationCategoryPage" data-id="艺术" class="weui-cell weui-cell_access" hover-class="weui-cell_active">
                    <view class="weui-cell__hd">
                        <image src="icon/艺术.svg" style="margin-right: 10px;vertical-align: middle;width:25px; height: 25px;"></image>
                    </view>
                    <view class="weui-cell__bd">艺术</view>
                    <view class="weui-cell__ft weui-cell__ft_in-access">查看</view>
                </view>

                <view bindtap="toAssociationCategoryPage" data-id="文化" class="weui-cell weui-cell_access" hover-class="weui-cell_active">
                    <view class="weui-cell__hd">
                        <image src="icon/文化.svg" style="margin-right: 10px;vertical-align: middle;width:25px; height: 25px;"></image>
                    </view>
                    <view class="weui-cell__bd">文化</view>
                    <view class="weui-cell__ft weui-cell__ft_in-access">查看</view>
                </view>

                <view bindtap="toAssociationCategoryPage" data-id="科技" class="weui-cell weui-cell_access" hover-class="weui-cell_active">
                    <view class="weui-cell__hd">
                        <image src="icon/科技.svg" style="margin-right: 10px;vertical-align: middle;width:25px; height: 25px;"></image>
                    </view>
                    <view class="weui-cell__bd">科技</view>
                    <view class="weui-cell__ft weui-cell__ft_in-access">查看</view>
                </view>

                <view bindtap="toAssociationCategoryPage" data-id="学术" class="weui-cell weui-cell_access" hover-class="weui-cell_active">
                    <view class="weui-cell__hd">
                        <image src="icon/学术.svg" style="margin-right: 10px;vertical-align: middle;width:25px; height: 25px;"></image>
                    </view>
                    <view class="weui-cell__bd">学术</view>
                    <view class="weui-cell__ft weui-cell__ft_in-access">查看</view>
                </view>

                <view bindtap="toAssociationCategoryPage" data-id="其他" class="weui-cell weui-cell_access" hover-class="weui-cell_active">
                    <view class="weui-cell__hd">
                        <image src="icon/其他.svg" style="margin-right: 10px;vertical-align: middle;width:25px; height: 25px;"></image>
                    </view>
                    <view class="weui-cell__bd">其他</view>
                    <view class="weui-cell__ft weui-cell__ft_in-access">查看</view>
                </view>
            </view>

            <view class="weui-cells__title">
                我的关注
            </view>

            <view class="association-container">
                <view bindtap="toAssociationDetailPage" data-id="{{item.id}}" class="association-cell" wx:for="{{userAssociationList}}" wx:key="*this">
                    <view class="association-name">{{item.name}}</view>
                    <view class="association-tags-container">
                        <view class="association-tag">
                            <image src="icon/{{item.category}}.svg" style="margin-right: 10rpx;vertical-align: middle;width:30rpx; height: 30rpx;" />
                            {{item.category}}
                        </view>
                    </view>
                </view>
            </view>

        </scroll-view>
    </swiper-item>


</swiper>



<view bindtap="refresh" hidden="{{currentTab!==0}}" class="refresh" hover-class="refresh_hover">
    <image src="../../icon/refresh.svg"/>
</view>
