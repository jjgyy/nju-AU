page {
  background: whitesmoke;
}

.association-container{
  display: flex;
  width: 100%;
  height: auto;
  flex-direction: row;
  flex-wrap: wrap;
  justify-content: flex-start;
}


.association-cell{
  display: flex;
  flex-direction: column;
  width: 46%;
  height: 400rpx;
  margin-left: 2%;
  margin-right: 1%;
  margin-top: 15rpx;
  margin-bottom: 15rpx;
  background: white;
  border-radius: 10rpx;
  overflow: hidden;
  animation-duration: 0.5s;
  animation-fill-mode: both;
  animation-name: fadeInDown;
}
@keyframes fadeInDown{
  from {opacity: 0;transform: translate(0, 100%);}
  to {opacity: 1;transform: none;}
}


.association-cell .association-image{
  height: 75%;
  overflow: hidden;
}

.association-image image{
  width: 100%;
  height: 100%;
  object-fit:cover;
}

.association-cell .association-info{
  display: flex;
  width: 100%;
  height: 25%;
  align-items:center;/*垂直居中*/
  justify-content: center;/*水平居中*/
  color: #555555;
  font-size: 28rpx;
}


.page-tab{
  display: flex;
  flex-flow: row;
  justify-content: space-around;
  width: 100%;
  height: 70rpx;
  background: white;
}


.tab-cell-left{
  display: flex;
  flex-flow: row;
  justify-content: flex-end;
  align-items:center;/*垂直居中*/
  width: 40%;
  font-size: 32rpx;
  font-weight: bold;
}

.tab-cell-right{
  display: flex;
  flex-flow: row;
  justify-content: flex-start;
  align-items:center;/*垂直居中*/
  width: 40%;
  font-size: 32rpx;
  font-weight: bold;
}

.page-tab-line{
  display: flex;
  flex-flow: row;
  justify-content: space-around;
  width: 100%;
  height: 10rpx;
  padding-top: 5rpx;
  background: white;
}


.tab-line-left{
  display: flex;
  flex-flow: row;
  justify-content: flex-end;
  align-items: flex-end;
  width: 40%;
  font-size: 32rpx;
  font-weight: bold;
}


.tab-line-right{
  display: flex;
  flex-flow: row;
  justify-content: flex-start;
  align-items: flex-end;
  width: 40%;
  font-size: 32rpx;
  font-weight: bold;
}



.scoll-y{height: 100%;}