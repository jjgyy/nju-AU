/*搜索框*/
.weui-search-bar{position:relative;padding:8px 10px;display:-webkit-box;display:-webkit-flex;display:flex;box-sizing:border-box;background-color:#efeff4;border-top:1rpx solid #d7d6dc;border-bottom:1rpx solid #d7d6dc}.weui-icon-search{margin-right:8px;font-size:inherit}.weui-icon-search_in-box{position:absolute;left:10px;top:7px}.weui-search-bar__text{display:inline-block;font-size:14px;vertical-align:middle}.weui-search-bar__form{position:relative;-webkit-box-flex:1;-webkit-flex:auto;flex:auto;border-radius:5px;background:#fff;border:1rpx solid #e6e6ea}.weui-search-bar__box{position:relative;padding-left:30px;padding-right:30px;width:100%;box-sizing:border-box;z-index:1}.weui-search-bar__input{height:28px;line-height:28px;font-size:14px}.weui-icon-clear{position:absolute;top:0;right:0;padding:7px 8px;font-size:0}.weui-search-bar__label{position:absolute;top:0;right:0;bottom:0;left:0;z-index:2;border-radius:3px;text-align:center;color:#9b9b9b;background:#fff;line-height:28px}.weui-search-bar__cancel-btn{margin-left:10px;line-height:28px;color:#09bb07;white-space:nowrap}
.searchbar-result{margin-top: 0;font-size: 14px;}.searchbar-result:before{display: none;}


page {
    background: #f7f7f7;
}


.moment__head {
    display: block;
}

.moment__sub {
    margin-right: 25rpx;
    font-size: 24rpx;
    color: #7d7d7d;
}


.association-container{
    display: flex;
    width: 100%;
    height: auto;
    padding-top: 20rpx;
    flex-direction: row;
    flex-wrap: wrap;
    justify-content: flex-start;
}


.association-cell{
    display: flex;
    flex-direction: column;
    width: 46%;
    height: 200rpx;
    margin-left: 2%;
    margin-right: 1%;
    margin-bottom: 20rpx;
    background: #ffffff;
    border-radius: 10rpx;
    border: 1rpx solid #dddddd;
    /*box-shadow: 0 2rpx 4rpx rgba(0, 0, 0, .125);*/
    overflow: hidden;
    animation-duration: 0.5s;
    animation-fill-mode: both;
    animation-name: fadeInDown;
}
@keyframes fadeInDown{
    from {opacity: 0;transform: translate(0, 100%);}
    to {opacity: 1;transform: none;}
}


.association-cell .association-name{
    display: flex;
    width: 100%;
    height: 35%;
    align-items:center;/*垂直居中*/
    justify-content: center;/*水平居中*/
    color: #414141;
    font-size: 28rpx;
    font-weight: 500;
}

.association-cell .association-tags-container{
    display: flex;
    flex-flow: row;
    align-items: center;
    justify-content: center;
    width: 100%;
}
.association-cell .association-tags-container .association-tag{
    display: flex;
    align-items: center;
    justify-content: center;
    padding: 10rpx 20rpx;
    border: 0;
    border-radius: 5rpx;
    background: #f3f3f3;
    color: #7d7d7d;
    font-size: 22rpx;
    font-weight: 450;
}




.page-tab-container{
    position: fixed;
    width: 100%;
    z-index: 1;
    border-bottom: 1rpx solid #dddddd;
}

.page-tab{
    display: flex;
    flex-flow: row;
    justify-content: space-around;
    width: 100%;
    height: 70rpx;
    background: white;
}

.tab-cell-left{
    display: flex;
    flex-flow: row;
    justify-content: flex-end;
    align-items:center;/*垂直居中*/
    width: 40%;
    font-size: 32rpx;
    font-weight: bold;
}

.tab-cell-right{
    display: flex;
    flex-flow: row;
    justify-content: flex-start;
    align-items:center;/*垂直居中*/
    width: 40%;
    font-size: 32rpx;
    font-weight: bold;
}

.page-tab-line{
    display: flex;
    flex-flow: row;
    justify-content: space-around;
    width: 100%;
    height: 10rpx;
    padding-top: 5rpx;
    background: white;
}


.tab-line-left{
    display: flex;
    flex-flow: row;
    justify-content: flex-end;
    align-items: flex-end;
    width: 40%;
    font-size: 32rpx;
    font-weight: bold;
}


.tab-line-right{
    display: flex;
    flex-flow: row;
    justify-content: flex-start;
    align-items: flex-end;
    width: 40%;
    font-size: 32rpx;
    font-weight: bold;
}



