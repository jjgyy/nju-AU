.user-info-container {
    display: flex;
    flex-direction: column;
    align-items: center;
    width: 100%;
    height: auto;
}

.QRcode-notice {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 100%;
    height: auto;
    margin-top: 40rpx;
    font-size: 30rpx;
    color: #888888;
}

.userinfo {
    margin-top: 40rpx;
    height: 140rpx;
    width: 100%;
    background: #FFF;
    display: flex;
    flex-direction: row;
    align-items: center;
    transition: all 300ms ease;
}

.userinfo-avatar {
    width: 100rpx;
    height: 100rpx;
    margin: 20rpx;
    border-radius: 50%;
}

.userinfo-nickname {
    display: flex;
    flex-direction: row;
    align-items: center;
    width: auto;
    font-size: 32rpx;
    color: #007AFF;
}

.userinfo-openId {
    display: flex;
    flex-direction: row;
    margin-top: 10rpx;
    width: 100%;
    font-size: 24rpx;
    color: #696969;
}
