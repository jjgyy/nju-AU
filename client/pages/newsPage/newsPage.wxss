page {
  background: whitesmoke;
}

.topPoster{
  width: 100%;
  height: 320rpx;
  text-align: center;
}
.topPoster image{
  width: 100%;
  height: 100%;
}
.topPoster view{
  width: 100%;
  margin-top: -120rpx;
  color: #EEEEEE;
  font-size: 38rpx;
  font-weight: bold;
}

.newsCell{
  display: flex;
  flex-flow: row;
  width: 100%;
  height: 250rpx;
  margin-left: auto;
  margin-right: auto;
  margin-top: 10rpx;
  margin-bottom: 10rpx;
  background: whitesmoke;
  animation-duration: 0.5s;
  animation-fill-mode: both;
  animation-name: fadeInDown;
}
@keyframes fadeInDown{
  from {opacity: 0;transform: translate(0, 100%);}
  to {opacity: 1;transform: none;}
}

.newsCell-left{
  display: flex;
  flex-flow: column;
  width: 60%;
  height: 100%;
  background: white;
}
.newsCell-left-title{
  display: flex;
  width: 100%;
  height: 80%;
}
.newsCell-left-title text{
  margin: 36rpx;
  font-size: 34rpx;
}

.newsCell-left-subInfo{
  display: flex;
  flex-flow: row;
  width: 100%;
  height: 20%;
  padding-left: 35rpx;
}
.newsCell-left-subInfo text{
  margin-right: 25rpx;
  font-size: 24rpx;
  color: #bbbbbb;
}

.newsCell-right{
  display: flex;
  width: 40%;
  height: 100%;
  background: white;
}
.newsCell-right image{
  width: 100%;
  height: 100%;
}


