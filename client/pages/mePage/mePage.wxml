<view class="container">
    <!-- 用户登录 -->
    <view class="userinfo">
        <image
            class="userinfo-avatar"
            src="{{logged ? userInfo.avatarUrl : './user-unlogin.png'}}"
            background-size="cover"
        ></image>
        <view>
            <button class="userinfo-nickname" wx:if="{{!logged}}" open-type="getUserInfo" bindgetuserinfo="bindGetUserInfo">登录</button>
            <text class="userinfo-nickname" wx:else>{{userInfo.nickName}}</text>
        </view>
    </view>
</view>


<view class="weui-cells__title">我的社团</view>
<view class="weui-cells weui-cells_after-title">
    <navigator url="../associationJoinedPage/associationJoinedPage" class="weui-cell weui-cell_access" hover-class="weui-cell_active">
        <view class="weui-cell__hd">
            <image src="icon/myAssociation.svg" style="margin-right: 10px;vertical-align: middle;width:25px; height: 25px;"></image>
        </view>
