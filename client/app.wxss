.uploader-text{
    width: 100%;
    font-size: 34rpx;
    color: #007AFF;
}
.uploader-container{
    width: 100%;
    height: 400rpx;
    padding: 20rpx 20rpx 20rpx 0;
    display: flex;
    align-content: center;
    justify-content: center;
    box-sizing: border-box;
    border-top: 1px solid rgba(0, 0, 0, .1);
}
.uploader-image {
    width: 100%;
    height: 360rpx;
}

.fly_from_bottom{
    animation-duration: 0.5s;
    animation-fill-mode: both;
    animation-name: fadeInDown;
}
@keyframes fadeInDown{
    from {opacity: 0;transform: translate(0, 100%);}
    to {opacity: 1;transform: none;}
}


.refresh {
    position: fixed;
    display: flex;
    align-items: center;
    justify-content: center;
    width: 100rpx;
    height: 100rpx;
    border-radius: 50rpx;
    right: 50rpx;
    bottom: 50rpx;
    background-color: rgba(0,0,0,0.7);
    background-position: center;
    background-repeat: no-repeat;
    background-size: 60%;
    transition: .5s;
}
.refresh_hover {
    right: 40rpx;
    bottom: 40rpx;
    width: 120rpx;
    height: 120rpx;
    border-radius: 60rpx;
    transform:rotate(360deg);
}
.refresh image {
    width: 60rpx;
    height: 60rpx;
    opacity:0.8;
}

